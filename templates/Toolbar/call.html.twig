<div id="call_{{ index }}" class="request {{ call.request.method|lower }}">
    <div class="summary" onclick="return showDetails(event, 'call_{{ index }}');">
        <h3>
            <span class="method">{{ call.request.method }}</span>
            <span class="path">&nbsp{{ call.request.scheme}}://{{call.request.host}}{{ call.request.path }}</span>
        </h3>
        <div class="code">
            <abbr title="{{ call.response.reasonPhrase }}">{{ call.response.statusCode }}</abbr>
        </div>
    </div>

    <div class="details">
        <h4>Request</h4>
        {% include 'Toolbar/request.html.twig' with {'index':index, 'request': call.request, 'requestContent': call.requestContent, 'time': call.time} %}
        <h4>response</h4>
        {% include 'Toolbar/response.html.twig' with {'index':index, 'response':call.response, 'responseContent': call.responseContent, 'time': call.time} %}

        <div class="progress-striped" style="text-align:center;background-color:#ddd;margin:5px 0 30px 0;padding: 0;font-variant:small-caps;">
            <div class="bar">
                <a  style="display:block;text-decoration:none;" href="#call_{{ index }}" title="top">back to top</a>
            </div>
        </div>
    </div>
</div>
